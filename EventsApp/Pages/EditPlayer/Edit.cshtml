@page
@using EventsApp.Models.ViewModels

@model EventsApp.Pages.EditPlayer.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Изменить</h1>

<h4>Призовые места</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Player.PlayerId" />
            <div class="visually-hidden">
                <label asp-for="Player.PlayerName" class="control-label"></label>
                <input asp-for="Player.PlayerName" class="form-control" />
                <span asp-validation-for="Player.PlayerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Player.PlayerLongName" class="control-label"></label>
                <input asp-for="Player.PlayerLongName" class="form-control" />
                <span asp-validation-for="Player.PlayerLongName" class="text-danger"></span>
            </div>
            <div class="visually-hidden">
                <label asp-for="Player.EventId" class="control-label"></label>
                <select asp-for="Player.EventId" class="form-control" asp-items="ViewBag.EventId"></select>
                <span asp-validation-for="Player.EventId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Player.Place" class="control-label"></label>
                <select asp-for="Player.Place" class="form-control" asp-items="Html.GetEnumSelectList<Place>()"></select>
                <span asp-validation-for="Player.Place" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-secondary" />
            </div>
        </form>
    </div>
</div>

