@page
@model EventsApp.Pages.EditPlayer.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Удаление</h1>

<h3>Вы хотите удалить подписку?</h3>
<div>
    <h4>Информация</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Имя
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Player.PlayerLongName)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Player.PlayerId" />
        <input type="submit" value="Удалить" class="btn btn-dark" /> |
        <a asp-page="./List">Вернуться к списку</a>
    </form>
</div>
