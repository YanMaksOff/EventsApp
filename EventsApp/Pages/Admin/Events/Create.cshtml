@page
@model EventsApp.Pages.Admin.Events.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Создать</h1>

<h4>Событие</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Event.EventName" class="control-label">Имя</label>
                <input asp-for="Event.EventName" class="form-control" />
                <span asp-validation-for="Event.EventName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Event.Category" class="control-label">Категория</label>
                <input asp-for="Event.Category" class="form-control" />
                <span asp-validation-for="Event.Category" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Event.EventText" class="control-label">Информация</label>
                <input asp-for="Event.EventText" class="form-control" />
                <span asp-validation-for="Event.EventText" class="text-danger"></span>
            </div>
            <div class="form-group">

                <label asp-for="Event.EventTime" class="control-label">Время</label>
                <input asp-for="Event.EventTime" class="form-control" />
                <span asp-validation-for="Event.EventTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Вернуться к списку</a>
</div>

